#!/usr/bin/env bash

windowid=$(xdotool getactivewindow 2> /dev/null || echo "Desktop")

if [ "$windowid" == "Desktop" ]; then
  echo ""
else
  title=$(xprop -id $(echo $windowid) WM_NAME)
  title=$(echo $title | grep -o '".*"')
  title=$(echo "$title" | tr -d '"')
  echo $title
fi

