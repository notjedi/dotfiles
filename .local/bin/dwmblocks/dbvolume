#!/usr/bin/env bash

volume=$(pamixer --get-volume)

case $BUTTON in
    1) pamixer -t;;
    3) setsid -f $TERMINAL -e pulsemixer;;
    4) pamixer --allow-boost -i 5;;
    5) pamixer --allow-boost -d 5;;
esac

if [ $volume -ge 70 ]; then
    icon="ðŸ”Š"
elif [ $volume -gt 30 ]; then
    icon="ðŸ”‰"
else
    icon="ðŸ”ˆ"
fi

[ $(pamixer --get-mute) = true ] && echo "ðŸ”‡ muted" && exit

echo "$icon $volume"
