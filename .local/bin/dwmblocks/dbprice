#!/usr/bin/env bash

cur=$1
icon=$2

getFavCoins() {

	notify-send -u low -t 1000 "ðŸ”ƒ Updating prices"
	declare -a coins=("BTC" "ETH" "XMR" "MATIC" "DOT" "ADA")
	for i in "${coins[@]}"; do
		price=$(curl --max-time 2 -s "rate.sx/1$i" | awk '{ printf ("%.2f", $1) }')
		out="$out \n$i: $price"
	done
	printf '%s' "$out"
}

case $BUTTON in
# ðŸ¤‘
1) notify-send -u low -t 5000 "ðŸ’° Crypto prices:" "$(getFavCoins)" ;;
3) setsid -f "$TERMINAL" -e cointop ;;
esac

[ -z "$cur" ] && exit

# price=$(curl -s "rate.sx/1$cur" | sed 's|\..*||g')
# echo "$icon \$$price"
price=$(curl --max-time 5 -s "inr.rate.sx/1$cur")
printf "%s %0.2f\n" "$icon" "$price"
# echo $(printf "%s %0.2f\n" $icon $price)
