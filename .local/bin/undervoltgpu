#!/usr/bin/env bash

# https://www.reddit.com/r/Amd/comments/agwroj/how_to_overclock_your_amd_gpu_on_linux/
file="/sys/class/drm/card0/device/pp_od_clk_voltage"

# Undervolt
echo 's 7 1350 970' > $file
echo 's 6 1300 960' > $file
echo 's 5 1250 950' > $file
echo 's 4 1215 940' > $file
echo 's 3 1145 930' > $file
echo 's 2 900 810' > $file

# Overclock Memory
echo 'm 1 1000 700' > $file
echo 'm 2 2200 800' > $file

# Commit changes
echo 'c' > $file
