set recolor                     "true"
set recolor-keephue             "true"

# use sqlite as bookmarks database backend
set database sqlite

# key bindings
map <PageUp> navigate previous
map <PageDown> navigate next

map + zoom in
map - zoom out

map <C-q> quit
