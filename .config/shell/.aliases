#!/bin/bash

# verbose aliases
alias rm="rm -vi" \
    ln="ln -v" \
    cp="cp -iv" \
    mv="mv -iv" \
    less="less -I" \
    mkd="mkdir -pv"

# git aliases
alias g="git" \
    ga="git add" \
    gd="git diff" \
    gp="git push" \
    gpu="git pull" \
    gr="git reset" \
    gs="git status" \
    gc="git commit" \
    gsh="git switch" \
    gre="git remote" \
    gch="git checkout"

# ls aliases
alias l="ls -A" \
    ll='ls -ahlF'

# colorize aliases
alias ls='ls --color=auto' \
    grep='grep --color=auto'

# cd aliases
alias ..="cd .." \
    chd="cd $HDD" \
    ...="cd ../.." \
    cfg="cd $HOME/.config" \
    cdd="cd $HDD/Documents" \
    cdo="cd $HOME/Downloads" \
    csc="cd $HDD/screenshots" \
    cwal="cd $HDD/wallpapers"

# ranger aliases
alias rh="ranger $HOME" \
    rhd="ranger $HDD" \
    rmo="ranger $HDD/movies" \
    rim="ranger $HDD/Images" \
    rlo="ranger $HOME/.local" \
    rd="ranger $HDD/Documents" \
    rfg="ranger $HOME/.config" \
    rdo="ranger $HOME/Downloads" \
    rsc="ranger $HDD/screenshots" \
    rwal="ranger $HDD/wallpapers"

# lf aliases
alias lh="lf $HOME" \
    lhd="lf $HDD" \
    lmo="lf $HDD/movies" \
    lim="lf $HDD/Images" \
    llo="lf $HOME/.local" \
    ld="lf $HDD/Documents" \
    lfg="lf $HOME/.config" \
    lsy="lf $HDD/syncthing" \
    ldo="lf $HOME/Downloads" \
    lsc="lf $HDD/screenshots" \
    lwal="lf $HDD/wallpapers"

# pacman aliases
alias p="doas pacman" \
    pacorphan="pacman -Qtdq" \
    pacins='doas pacman -S $(pacman -Ssq | fzf | tr -d "\n")' \
    pacls="pacman -Qq | fzf --preview 'pacman -Qil {}' --layout=reverse --bind 'enter:execute(pacman -Qil {} | less)'"

# mining
alias xmr="doas xmrig"

# program aliases
alias v="nvim" \
    r="ranger" \
    nb="newsboat"\
    ncp="ncmpcpp"\
    py="python3" \
    ka="killall" \
    ipy="ipython" \
    sv="doas nvim" \
    python="python3" \
    sn="sudo -E nvim" \
    yout="pipe-viewer" \
    ws="watch sensors" \
    sudb="doas updatedb" \
    jup="jupyter notebook & disown" \
    startx="startx ~/.config/x11/xinitrc"

# misc
alias pp="popd" \
    push="pushd" \
    gg="go run ." \
    usg="dust -rxd 1" \
    fin="ls -A | grep -i" \
    ta="tmux attach-session" \
    fig="figlet -f ansishadow" \
    sag="ssh-add $HOME/.ssh/git" \
    caps="xdotool key Caps_Lock" \
    notes="nvim $GRAB_HOME/github.com/notjedi/journal-old/index.md" \
    pixel3a="$HOME/Android/Sdk/emulator/emulator -avd Pixel_3a_API_28 -gpu host"
