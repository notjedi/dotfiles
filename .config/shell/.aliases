#!/bin/bash

# verbose aliases
alias rm="rm -vi" \
    ln="ln -v" \
    cp="cp -iv" \
    mv="mv -iv" \
    less="less -I" \
    mkd="mkdir -pv"

# git aliases
alias g="git" \
    ga="git add" \
    gd="git diff" \
    gp="git push" \
    gs="git status" \
    gr="git remote" \
    gc="git commit"

# ls aliases
alias l="ls -A" \
    ll='ls -ahlF'

# colorize aliases
alias ls='ls --color=auto' \
    grep='grep --color=auto' \

# cd aliases
alias ..="cd .." \
    chd="cd $HDD" \
    ...="cd ../.." \
    cco="cd $HDD/Code" \
    cfg="cd $HOME/.config" \
    cdd="cd $HDD/Documents" \
    cdo="cd $HOME/Downloads" \
    csc="cd $HDD/screenshots" \
    cwal="cd $HDD/wallpapers"

# ranger aliases
alias rh="ranger $HOME" \
    rr="ranger $HDD" \
    rco="ranger $HDD/Code" \
    rmo="ranger $HDD/movies" \
    rim="ranger $HDD/Images" \
    rlo="ranger $HOME/.local" \
    rd="ranger $HDD/Documents" \
    rfg="ranger $HOME/.config" \
    rdo="ranger $HOME/Downloads" \
    rsc="ranger $HDD/screenshots" \
    rwal="ranger $HDD/wallpapers"

# pacman aliases
alias p="doas pacman" \
    install='yay -S $(yay -Ssq | fzf | tr -d "\n")' \
    lsorphan="pacman -Qtdq"

# mining
alias xmr="doas xmrig"

# program aliases
alias v="nvim" \
    r="ranger" \
    nb="newsboat"\
    py="python3" \
    ka="killall" \
    ipy="ipython" \
    sv="doas nvim" \
    pip="doas pip3" \
    python="python3" \
    sn="doas -E nvim" \
    yout="pipe-viewer" \
    ws="watch sensors" \
    sudb="doas updatedb" \
    jup="jupyter notebook & disown" \
    startx="startx ~/.config/x11/xinitrc"

# misc
alias pop="popd" \
    push="pushd" \
    fi="l | grep -i" \
    fig="figlet -f ansishadow" \
    caps="xdotool key Caps_Lock" \
    pixel3a="$HOME/Android/Sdk/emulator/emulator -avd Pixel_3a_API_28 -gpu host"
